rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    
    // Helper function to check if user is authenticated
    function isAuthenticated() {
      return request.auth != null;
    }
    
    // Helper function to check if user is the owner
    function isOwner(userId) {
      return isAuthenticated() && request.auth.uid == userId;
    }
    
    // Helper function to check if user is admin
    function isAdmin() {
      return isAuthenticated() && 
             get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'admin';
    }
    
    // Users collection
    match /users/{userId} {
      allow read: if isAuthenticated();
      allow create: if isAuthenticated() && isOwner(userId);
      allow update, delete: if isOwner(userId) || isAdmin();
    }
    
    // Properties collection
    match /properties/{propertyId} {
      allow read: if true; // Public read access
      allow create: if isAuthenticated();
      allow update, delete: if isAuthenticated() && 
                             (resource.data.ownerId == request.auth.uid || isAdmin());
    }
    
    // Construction Projects collection
    // Users can read/write only their own construction projects
    // Providers can read projects assigned to them
    match /constructionProjects/{projectId} {
      allow read: if isAuthenticated() && 
                     (resource.data.userId == request.auth.uid || 
                      resource.data.providerId == request.auth.uid ||
                      isAdmin());
      allow create: if isAuthenticated() && 
                        request.resource.data.userId == request.auth.uid;
      allow update: if isAuthenticated() && 
                       (resource.data.userId == request.auth.uid || 
                        resource.data.providerId == request.auth.uid ||
                        isAdmin());
      allow delete: if isAuthenticated() && 
                        (resource.data.userId == request.auth.uid || isAdmin());
    }
    
    // Service Providers collection
    // Authenticated users can read all providers (for listing)
    // Write access (create/update/delete) only for users with "provider" or "admin" role
    // Users can also create their own provider document (for registration)
    match /serviceProviders/{providerId} {
      allow read: if isAuthenticated(); // Authenticated users can read providers
      allow create: if isAuthenticated() && 
                       (request.auth.token.role in ["provider", "admin"] ||
                        request.resource.data.userId == request.auth.uid);
      allow update, delete: if isAuthenticated() && 
                               (request.auth.token.role in ["provider", "admin"] ||
                                resource.data.userId == request.auth.uid);
    }
    
    // Conversations collection (for messaging)
    match /conversations/{conversationId} {
      allow read: if isAuthenticated() && 
                     (resource.data.participants.hasAny([request.auth.uid]) || isAdmin());
      allow create: if isAuthenticated() && 
                       request.resource.data.participants.hasAny([request.auth.uid]);
      allow update, delete: if isAuthenticated() && 
                                (resource.data.participants.hasAny([request.auth.uid]) || isAdmin());
      
      // Messages subcollection
      match /messages/{messageId} {
        allow read: if isAuthenticated() && 
                       (get(/databases/$(database)/documents/conversations/$(conversationId)).data.participants.hasAny([request.auth.uid]) || isAdmin());
        allow create: if isAuthenticated() && 
                         request.resource.data.senderId == request.auth.uid;
        allow update, delete: if isAuthenticated() && 
                                  (resource.data.senderId == request.auth.uid || isAdmin());
      }
    }
    
    // Service Requests collection (for renovation services)
    match /serviceRequests/{requestId} {
      allow read: if isAuthenticated() && 
                     (resource.data.userId == request.auth.uid || 
                      resource.data.providerId == request.auth.uid ||
                      isAdmin());
      allow create: if isAuthenticated() && 
                        request.resource.data.userId == request.auth.uid;
      allow update: if isAuthenticated() && 
                       (resource.data.userId == request.auth.uid || 
                        resource.data.providerId == request.auth.uid ||
                        isAdmin());
      allow delete: if isAuthenticated() && 
                        (resource.data.userId == request.auth.uid || isAdmin());
    }
    
    // Renovation Projects collection
    // Users can create renovation projects for their own properties
    // Users can read their own projects or projects assigned to them as providers
    // Providers can update projects assigned to them
    // Users can update their own projects only if status is "Pending" (for cancellation)
    // Users can delete their own projects (similar to update rules)
    match /renovationProjects/{projectId} {
      // Allow create: authenticated users can create projects, but userId must match their own
      allow create: if isAuthenticated() && 
                       request.resource.data.userId == request.auth.uid;
      
      // Allow read: users can read their own projects, providers can read assigned projects, admins can read all
      allow read: if isAuthenticated() && 
                    (resource.data.userId == request.auth.uid ||
                     resource.data.providerId == request.auth.uid ||
                     request.auth.token.role == "admin");
      
      // Allow update: providers can update assigned projects, users can update their own if status is "Pending"
      allow update: if isAuthenticated() && 
                      (resource.data.providerId == request.auth.uid ||
                       (resource.data.userId == request.auth.uid && 
                        resource.data.status == "Pending"));
      
      // Allow delete: similar to update - providers can delete assigned projects, users can delete their own if "Pending"
      allow delete: if isAuthenticated() && 
                      (resource.data.providerId == request.auth.uid ||
                       (resource.data.userId == request.auth.uid && 
                        resource.data.status == "Pending"));
    }
    
    // Notifications collection
    match /notifications/{notificationId} {
      allow read: if isAuthenticated() && 
                     (resource.data.userId == request.auth.uid || isAdmin());
      allow create: if isAuthenticated();
      allow update, delete: if isAuthenticated() && 
                                (resource.data.userId == request.auth.uid || isAdmin());
    }
    
    // Reviews collection
    // Anyone can read reviews (public access)
    // Only authenticated users can create reviews
    // Only the review owner can update or delete their review
    match /reviews/{reviewId} {
      allow read: if true; // Public read access
      allow create: if isAuthenticated() && 
                       request.resource.data.reviewerId == request.auth.uid;
      allow update, delete: if isAuthenticated() && 
                               resource.data.reviewerId == request.auth.uid;
    }
    
    // Default deny rule for all other collections
    match /{document=**} {
      allow read, write: if false;
    }
  }
}
